<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa"
    tools:context=".ui.ScanActivity">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="◀"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@android:color/transparent"
            android:padding="0dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/scan_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史"
            android:textSize="14sp"
            android:textColor="#1890ff"
            android:padding="8dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

    <!-- 标签页 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tabCameraScan"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/camera_scan"
            android:textSize="14sp"
            android:textColor="#667eea"
            android:gravity="center"
            android:background="@drawable/tab_selected"
            android:clickable="true" />

        <TextView
            android:id="@+id/tabImageUpload"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/image_upload"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:clickable="true" />

    </LinearLayout>

    <!-- 指导文字 -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="将名片放入框内，点击拍照"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="12dp"
        android:background="@color/white" />

    <!-- 相机/预览区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000">

        <!-- 相机预览 -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 图片预览 -->
        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- 名片框架 -->
        <View
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/card_frame_overlay" />

    </FrameLayout>

    <!-- 相机控制区域 -->
    <LinearLayout
        android:id="@+id/layoutCameraControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center">

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="相册"
            android:textSize="14sp"
            android:background="@drawable/button_secondary_enhanced" />

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:layout_marginHorizontal="8dp"
            android:text="@string/capture_photo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_primary_enhanced" />

        <Button
            android:id="@+id/btnFlashlight"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="闪光灯"
            android:textSize="14sp"
            android:background="@drawable/button_secondary_enhanced" />

    </LinearLayout>

    <!-- 预览控制区域 -->
    <LinearLayout
        android:id="@+id/layoutPreviewControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/btnRetake"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="重拍"
            android:textSize="14sp"
            android:background="@drawable/button_secondary_enhanced" />

        <Button
            android:id="@+id/btnProcessOcr"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:text="开始识别"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_primary_enhanced" />

    </LinearLayout>

</LinearLayout>