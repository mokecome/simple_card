<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 半透明背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />
        </shape>
    </item>

    <!-- 中央透明區域 -->
    <item
        android:left="40dp"
        android:right="40dp"
        android:top="180dp"
        android:bottom="180dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#667EEA"
                android:dashWidth="10dp"
                android:dashGap="5dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- 四個角標記 -->
    <!-- 左上角 -->
    <item
        android:left="35dp"
        android:right="280dp"
        android:top="175dp"
        android:bottom="340dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#667EEA" />
            <corners android:topLeftRadius="16dp" />
        </shape>
    </item>

    <!-- 右上角 -->
    <item
        android:left="280dp"
        android:right="35dp"
        android:top="175dp"
        android:bottom="340dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#667EEA" />
            <corners android:topRightRadius="16dp" />
        </shape>
    </item>

    <!-- 左下角 -->
    <item
        android:left="35dp"
        android:right="280dp"
        android:top="340dp"
        android:bottom="175dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#667EEA" />
            <corners android:bottomLeftRadius="16dp" />
        </shape>
    </item>

    <!-- 右下角 -->
    <item
        android:left="280dp"
        android:right="35dp"
        android:top="340dp"
        android:bottom="175dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#667EEA" />
            <corners android:bottomRightRadius="16dp" />
        </shape>
    </item>
</layer-list>