<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下狀態 -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- 外圈 -->
            <item>
                <shape android:shape="oval">
                    <size android:width="72dp" android:height="72dp" />
                    <solid android:color="#E0E0E0" />
                </shape>
            </item>
            <!-- 內圈 -->
            <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
                <shape android:shape="oval">
                    <solid android:color="#5A67D8" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 默認狀態 -->
    <item>
        <layer-list>
            <!-- 外圈 -->
            <item>
                <shape android:shape="oval">
                    <size android:width="72dp" android:height="72dp" />
                    <solid android:color="#FFFFFF" />
                    <stroke android:width="3dp" android:color="#667EEA" />
                </shape>
            </item>
            <!-- 內圈 -->
            <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
                <shape android:shape="oval">
                    <solid android:color="#667EEA" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>