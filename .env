# OCR名片應用環境配置

# 應用基本設定
APP_NAME=OCR 名片管理系統
APP_VERSION=1.0.0
ENV=development
DEBUG=false

# 服務器設定
HOST=0.0.0.0
PORT=8006
WORKERS=1

# 數據庫設定
DATABASE_URL=sqlite:///./cards.db
DB_ECHO=false

# API設定
API_V1_PREFIX=/api/v1

# CORS設定 - 允許前端所有端口訪問
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# 文件上傳設定
UPLOAD_DIR=output/card_images
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png

# OCR設定
OCR_API_URL=http://0.0.0.0:23333/v1
OCR_API_KEY=YOUR_API_KEY
OCR_TIMEOUT=30

# 日誌設定
LOG_LEVEL=INFO
LOG_FILE=
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 前端設定
REACT_APP_API_BASE_URL=http://192.168.50.123:8006
REACT_APP_HOST=0.0.0.0
REACT_APP_PORT=1002
REACT_APP_DANGEROUSLY_DISABLE_HOST_CHECK=true

# 前端應用配置
REACT_APP_NAME=OCR 名片管理系統
REACT_APP_VERSION=1.0.0
REACT_APP_API_TIMEOUT=30000
REACT_APP_DEBUG=false
REACT_APP_ENABLE_DEV_TOOLS=false
REACT_APP_ENABLE_ERROR_REPORTING=false

# 前端相機配置
REACT_APP_CAMERA_DEFAULT_WIDTH=1920
REACT_APP_CAMERA_DEFAULT_HEIGHT=1080
REACT_APP_CAMERA_TIMEOUT=10000

# 前端UI配置
REACT_APP_PRIMARY_COLOR=#1890ff
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# 前端文件上傳配置
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png

# 前端緩存配置
REACT_APP_CACHE_EXPIRE_TIME=3600000
REACT_APP_ENABLE_LOCAL_STORAGE=true

# OCR服務配置
OCR_PORT=8504
OCR_HOST=0.0.0.0
OCR_UPLOAD_FOLDER=uploads
OCR_CONFIG_FILE=config/serials.json
OCR_BATCH_API_URL=https://local_llm.star-bit.io/api/card

# 序列號配置
SERIAL_CONFIG_FILE=config/serials.json
SERIAL_DEFAULT_DURATION=15
